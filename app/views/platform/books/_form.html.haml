= simple_form_for [:platform, book] do |f|
  .row
    .col-12
      = f.input :title

  .row
    .col-12
      = f.input :description

  .row
    .col-12
      = f.input :author

  .row
    .col-12
      = f.input :image

  .row.mt-3
    .col-12.col-lg-6
      = link_to t('.commands.cancel'), platform_books_path, class: 'btn btn-warning float-left'
    .col-12.col-lg-6
      = f.submit t('.commands.save'), class: 'btn btn-primary float-right'
