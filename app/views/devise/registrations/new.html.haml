.row
  .col-lg-4.col-md-6.ml-auto.mr-auto
    %h1.text-center Sign Up
    = simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f|

      = f.input :email, label: false, autofocus: false, class: 'form-control', placeholder: "Email Address"
      = f.input :password, label: false, autocomplete: "off", class: 'form-control', placeholder: 'Password'
      = f.input :password_confirmation, label: false, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password'

      .form-group
        = f.submit "Sign up", class: "btn btn-primary btn-block btn-lg"

    .text-center
      = render "devise/shared/links"
